{
  "name": "mes-desktop",
  "version": "1.0.0",
  "scripts": {
    "dev:mock": "vite --mode mock",
    "dev": "vite --mode development",
    "build": "vue-tsc --noEmit && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint --ext .vue,.js,.jsx,.ts,.tsx ./ --max-warnings 0",
    "lint:fix": "eslint --ext .vue,.js,jsx,.ts,.tsx ./ --max-warnings 0 --fix",
    "stylelint": "stylelint src/**/*.{html,vue,sass,less}",
    "stylelint:fix": "stylelint --fix src/**/*.{html,vue,css,sass,less}",
    "prepare": "husky install"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "lodash": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.0",
    "qrcode.vue": "^3.4.1",
    "tdesign-icons-vue-next": "^0.2.2",
    "tdesign-vue-next": "^1.6.8",
    "tvision-color": "^1.6.0",
    "vue": "^3.3.4",
    "vue-clipboard3": "^2.0.0",
    "vue-draggable-plus": "^0.2.7",
    "vue-hooks-plus": "^1.8.5",
    "vue-i18n": "^9.6.2",
    "vue-router": "^4.2.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/connect-history-api-fallback": "^1.5.3",
    "@types/echarts": "^4.9.20",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.200",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/eslint-config-typescript": "^11.0.3",
    "commitizen": "^4.3.0",
    "connect-history-api-fallback": "^2.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.15.1",
    "eslint-plugin-vue-scoped-css": "^2.5.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "less": "^4.1.3",
    "lint-staged": "^13.2.3",
    "mockjs": "^1.1.0",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.8",
    "rollup-plugin-visualizer": "^5.9.2",
    "stylelint": "~15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "~6.0.3",
    "swagger-typescript-api": "^13.0.3",
    "typescript": "~5.1.6",
    "vite": "^4.5.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-svg-loader": "^4.0.0",
    "vue-tsc": "^1.8.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/!(web-core)*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "npm run lint:fix"
    ],
    "src/**/!(web-core)*.{html,vue,css,sass,less}": [
      "npm run stylelint:fix"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
